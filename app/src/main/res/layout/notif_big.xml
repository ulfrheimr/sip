<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dip" >

    <ImageView
        android:id="@+id/b_notif_close"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="3dip"
        android:layout_marginTop="3dip"
        android:background="@android:color/holo_blue_light" />

    <ImageView
        android:id="@+id/b_notif_art"
        android:layout_width="128dip"
        android:layout_height="128dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:background="@android:color/holo_blue_light"
        android:clickable="true" />

    <TextView
        android:id="@+id/b_notif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="9dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/b_notif_art"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/b_notif_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b_notif_title"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="10dip"
        android:layout_toLeftOf="@+id/b_notif_close"
        android:layout_toRightOf="@+id/b_notif_art"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@+id/b_notif_art"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/b_notif_rwd"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_marginLeft="9dip"
            android:layout_weight="1"
            android:background="@android:color/holo_purple"
            android:clickable="true" />

        <ImageView
            android:id="@+id/b_notif_toggle"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_marginLeft="9dip"
            android:layout_weight="1"
            android:background="@android:color/holo_purple"
            android:clickable="true" />

        <ImageView
            android:id="@+id/b_notif_fwd"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_marginLeft="9dip"
            android:layout_weight="1"
            android:background="@android:color/holo_purple"
            android:clickable="true" />
    </LinearLayout>

</RelativeLayout>