<?xml version="1.0" encoding="utf-8"?>
<nobody.sip.ui.Player xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/player_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip" >

        <ImageView
            android:id="@+id/player_toggle"
            android:layout_width="29dip"
            android:layout_height="29dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/player_rewind"
            android:layout_width="29dip"
            android:layout_height="29dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:layout_toLeftOf="@+id/player_toggle"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/player_forward"
            android:layout_width="29dip"
            android:layout_height="29dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@+id/player_toggle"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/player_random"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@+id/player_forward"
            android:background="@android:color/black"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/player_repeat"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:layout_toLeftOf="@+id/player_rewind"
            android:background="@android:color/black"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/player_song_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_button_container"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        android:layout_marginTop="3dip"
        android:layout_toRightOf="@+id/player_art"
        android:fontFamily="sans-serif-light"
        android:singleLine="true"
        android:text="There is a song over here!"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

</nobody.sip.ui.Player>